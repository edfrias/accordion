{
  "extends": "airbnb",
  "rules": {
    "max-len": ["error", 250, 2, {"ignoreComments": true}],
    "linebreak-style": 0,
    "class-methods-use-this": 0,
    "no-unused-expressions": ["error", {"allowShortCircuit": true, "allowTernary": true}]
  },
  "parser": "babel-eslint",
  "globals": {
    "window": true,
    "document": true,
    "HTMLElement": true
  }
}